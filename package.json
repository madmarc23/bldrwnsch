{
  "name": "bldrwnsch",
  "version": "1.0.0",
  "private": true,
  "description": "Interactive map of image requests of the German Wikipedia",
  "main": "app.js",
  "author": "Simon Legner <Simon.Legner@gmail.com>",
  "keywords": [
    "wikipedia",
    "toolforge",
    "leaflet",
    "image-requests",
    "Bilderwunsch"
  ],
  "license": "GPL-3.0-or-later",
  "homepage": "https://tools.wmflabs.org/bldrwnsch/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon04/bldrwnsch.git"
  },
  "bugs": {
    "url": "https://github.com/simon04/bldrwnsch/issues"
  },
  "scripts": {
    "build": "rollup --config",
    "fix:eslint": "eslint --no-ignore $(git ls-files '*.js' '*.ts') --fix",
    "fix:style": "prettier --write $(git ls-files '*js' '*.ts' '*.html' '*.css' '*.md')",
    "test": "eslint --no-ignore $(git ls-files '*.js' '*.ts') && prettier --list-different $(git ls-files '*.js' '*.ts' '*.html' '*.css' '*.md')",
    "deploy": "gh-pages --dist dist/ --branch gh-pages"
  },
  "dependencies": {
    "gh-pages": "^2.0.1",
    "ol": "^5.3.3"
  },
  "devDependencies": {
    "@types/ol": "^5.3.0",
    "@types/rollup": "^0.54.0",
    "eslint": "^5.16.0",
    "eslint-plugin-compat": "^3.1.1",
    "husky": "^1.2.1",
    "postcss-copy": "^7.1.0",
    "prettier": "^1.15.3",
    "rollup": "^0.67.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-postcss": "^1.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "prettier": {
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  }
}
